{
  // java
  "codeLens.enable": true,
  "java.referencesCodeLens.enabled": true,
  "java.implementationsCodeLens.enabled": true,
  "java.completion.enabled": true,
  "java.import.maven.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.trace.server": "verbose",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"~/.vim/coc/extensions/node_modules/coc-java-lombok/jar/lombok.jar\"",

  // language servers
  "languageserver": {
    "csharp-ls": {
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp", "h", "hpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },

  // explorer
  "explorer.width": 25,
  "explorer.focus": false,
  "explorer.buffer.tabOnly": true,
  "explorer.buffer.showHiddenBuffers": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.cdCommand": "cd",
  "explorer.file.column.indent.chars": " ",
  "explorer.file.column.indent.indentLine": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nerdfont.vim",
  "explorer.git.enable": true,

  // javascript
  "javascript.suggest.autoImports": true,
  "javascript.suggest.paths": true,
  "javascript.format.enabled": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
  "javascript.preferences.quoteStyle": "single",

  // tsserver
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.format.enabled": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.updateImportsOnFileMove.enable": true,

  // prettier
  "prettier.bracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,

  // omnisharp
  "omnisharp.version": "latest",
  "omnisharp.trace.server": "verbose",
  "omnisharp.debug.server": true,
  "snippets.ultisnips.pythonPrompt": false,

  // python
  "python.formatting.provider": "black",
}
